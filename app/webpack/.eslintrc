{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true,
    "jquery": true
  },
  "globals": {
    I18n: true,
    CURRENT_USER: true,
    PREFERRED_PLACE: true,
    google: true
  },
  // To give you an idea how to override rule options:
  // "rules": {
  //   "quotes": [2, "double"],
  //   "eol-last": [0],
  //   "no-mixed-requires": [0],
  //   "no-underscore-dangle": [0]
  // }
  "rules": {
    "quotes": [2, "double"],
    "comma-dangle": [2, "never"],
    "space-in-parens": [2, "always"],
    "func-names": 0
  }
}
