<%- content_for(:extracss) do -%>
  <style type="text/css" media="screen">
    ul { list-style: none; padding: 0; }
    #quicklinks a.button {padding-left: 30px; width: 268px;}
    #nearbylink { background: url('/images/silk/world.png') 7px 45% no-repeat; }
    #addobslink { background: url('/images/notebook-icon-color-15px.png') 9px 45% no-repeat; }
    #addfromlistlink { background: url('/images/checklist-icon.png') 7px 45% no-repeat; }
  </style>
<%- end -%>

<% content_for(:title) do %>
  <%= t(:a_community_for_naturalist) %>
<% end %>

<% unless logged_in? -%>
  <%= t(:welcome_to_inat) %>
<% end -%>

<ul id="quicklinks" style="width: 100%">
  <li><%= link_to t(:nearby_observations), nearby_observations_path, :id => "nearbylink", :class => "inlineblock button fullportrait" %></li>
  <li><%= link_to t(:add_an_observation), add_nearby_observations_path, :id => "addobslink", :class => "inlineblock button fullportrait" %></li>
  <% if logged_in? -%>
    <li><%= link_to t(:add_observations_from_list), add_observations_from_list_path, :id => "addfromlistlink", :class => "button inlineblock fullportrait" %></li>
  <% end -%>
</ul>
