- content_for :title do
  = @title = t( :terms__terminology )

- content_for :extracss do
  :css
    .term-table td {
      width: 100%;
    }

%h1= @title

%p.lead=t "views.terms.index.inaturalist_employs_a_variety_of_terms"

%h2=t :export_observations

= render "terms/terms", terms: @export_terms, define_term: lambda { | term | auto_link t( "views.observations.field_descriptions.#{term}", raise: true ) }

%p=t "views.terms.index.exports_can_also_contain_observation_field_values_html", observation_fields_url: observation_fields_url, terms_url: terms_url, term_url: term_url( term: "field:count" )

%h2=t :other__terms

= render "terms/terms", terms: @other_terms, define_term: lambda { | term | auto_link t( "#{term}__definition", raise: true ) }
