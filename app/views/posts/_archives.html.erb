<%- archives ||= @archives -%>
<%- display_user ||= @display_user -%>
<div id="archives">
  <h3><%= t(:archives) %></h3>
  <ul class="readable">
    <li class="clear">
      <span class="label"><%= t(:month) %></span>
      <span class="count"><%= t(:posts) %></span>
    </li>
    <% for year, month_num, month_name, count in archives %>
      <li class="clear">
        <% if @parent.is_a?(Project) %>
          <%= link_to "#{t("date_format.month."+month_name.downcase).humanize} #{year}", project_journal_archives_by_month_path(@parent_slug, year, month_num) %>
        <% else %>
          <%= link_to "#{t("date_format.month."+month_name.downcase).humanize} #{year}", journal_archives_by_month_path(@parent_slug, year, month_num) %>
        <% end %>
        <span class="count"><%= count %></span></li>
    <% end %>
  </ul>
</div>
