<% content_for(:title) do -%>
  <%= t(:x_journal_editing, :user => "#{@post.user.login}") %> "<%= @post.title %>"
<%- end -%>
<% content_for(:extracss) do -%>
  <%= stylesheet_link_tag "observations", "posts" %>
<% end -%>
<div id="pageheader" class="column span-24">
  <div class="breadcrumbs">
    <% if current_user and current_user.login == @post.user.login %>
    <%= link_to t(:back_to_your_journal), 
                journal_by_login_path(current_user.login),
                :class => 'back crumb' %>
    <% else %>
    <%= link_to t(:back_to_x_journal, :user => "#{@post.user.login}"), 
                journal_by_login_path(@post.user.login),
                :class => 'back crumb' %>
    <% end %>
  </div><!-- /#breadcrumbs -->
  
  <h2><%= t(:editing) %> "<%= @post.title %>"</h2>
</div>

<div class="column span-24">
  <% if @preview -%>
    <div id="preview" class="box">
      <h3><%=t(:preview)%></h3>
      <%= render :partial => "post", :locals => { :post => @preview } %>
    </div>
  <% end -%>

  <%= render :partial => 'form' %>  
</div>

