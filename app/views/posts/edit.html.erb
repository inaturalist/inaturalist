<% content_for(:title) do -%>
  <%= t(:x_journal_editing, :user => @parent_display_name).html_safe %> "<%= @post.title %>"
<%- end -%>
<% content_for(:extracss) do -%>
  <%= stylesheet_link_tag "observations", "posts" %>
<% end -%>
<div id="pageheader" class="column span-24">
  <div class="breadcrumbs">
    <strong><%= link_to t(:back_to_post).html_safe, @post, :class => 'crumb' %></strong>
  </div><!-- /#breadcrumbs -->
  <h2><%= t(:editing) %> "<%= @post.title %>"</h2>
  <div class="meta">
    <%= t(:post) + ' ' + t(:from).downcase %>
    <% if @post.parent.is_a?(Project) -%>
      <%= link_to @post.parent.title, @post.parent %>'s journal
    <% else %>
      <%= link_to t(:your).downcase + ' ' + t(:journal).downcase, journal_by_login_path(current_user.login) %>
    <% end -%>
  </div>
</div>

<div class="column span-24">
  <% if @preview -%>
    <div id="preview" class="box">
      <h3><%=t :preview %></h3>
      <%= render :partial => "post", :locals => { :post => @post } %>
    </div>
  <% end -%>

  <%= render :partial => 'form' %>  
</div>

