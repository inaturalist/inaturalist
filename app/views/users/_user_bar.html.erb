<% if logged_in? -%>
  <div id="user-bar-greeting"><%= t(:logged_in_as) link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to t(:log_out), logout_path, { :title => t(:log_out) }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP t(:not_logged_in), :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to t(:log_in),  login_path,  { :title => t(:log_in) } %> /
                               <%= link_to t(:sign_up), signup_path, { :title => t(:create_an_account)} %></div><% end -%>
