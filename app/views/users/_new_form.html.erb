<%= error_messages_for :user, 
      :header_message => "Oops.",
      :message => t(:there_were_some_problems_with_fields) %>

<% form_for :user, :url => users_path, :builder => DefaultFormBuilder, :html => { :id => 'signup_form' } do |f| -%>
  <%= f.text_field :login, :class => 'text', :label => t(:login_slash_username) %>
  <%= f.text_field :email, :class => 'text' %>
  <%= f.password_field :password, :class => 'text' %>
  <%= f.password_field :password_confirmation, :class => 'text' %>
  <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, {}, {
    :label => t(:your_default_time_zone),
    :description => t(:all_your_observations_will_default_this_time_zone),
    :class => 'select'}) %>
  <%= f.check_box :preferred_observation_license, {:checked => true}, Observation::CC_BY,
    :label => t(:yes_license_my_observations_so_scientists_can_use), 
    :label_after => true,
    :description => t(:using_cc_license_makes_easier_use_your_data) %>

  <%= f.submit t(:sign_up), :class => "default button", "data-loading-click" => t(:creating_your_account) %>
<% end -%>
