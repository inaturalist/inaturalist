= form_for( resource, as: resource_name, url: password_path( resource_name ), html: { novalidate: true } ) do |f|
  %h1= t :forgot_your_password
  .form-group.text-field.email
    = f.text_field :email, autocorrect: "off", autocapitalize: "off", required: true, placeholder: t( :email ), type: "email", class: "form-control"
    - if resource.errors[:email] && resource.errors[:email] == ["not found"]
      .error= t :we_couldnt_find_a_user
    - else
      .error= formatted_error_sentence_for( resource, :email )
  = f.submit t(:send_me_reset_password_instructions), class: "btn btn-inat btn-primary", data: { loading_click: t(:sending) }
