<%- 
  user ||= @user
  extra ||= nil
%>
<div class="row">
  <div class="col-md-12">
    <div class="list-group"> 
      <%= link_to observations_path( user_id: user.login, verifiable: "any", place_id: "any" ), :class => "list-group-item" do %>
        <span class="badge"><%= user.observations_count %></span>
        <i class="fa fa-binoculars"></i>
        <%= t(:observations) %>
      <% end %>
      <%= link_to by_login_lifelists_path( login: user.login ), :class => 'list-group-item' do %>
        <span class="badge"><%= user.species_count %></span>
        <span class="glyphicon glyphicon-leaf"></span>
        <%= t(:species) %>
      <% end %>      
      <%= link_to identifications_by_login_path(user.login), :class => 'list-group-item' do %>
        <span class="badge"><%= user.identifications_count %></span>
        <i class="icon icon-identification"></i>
        <%= t(:identifications) %>
      <% end %>
      <%= link_to journal_by_login_path(user.login), :class => 'list-group-item' do %>
        <span class="badge"><%= user.journal_posts_count %></span>
        <span class="glyphicon glyphicon-book"></span>
        <%= t(:journal_posts) %>
      <% end %>
      <%= link_to lists_by_login_path(user.login), :class => 'list-group-item' do %>
        <span class="badge"><%= user.personal_lists.count %></span>
        <span class="glyphicon glyphicon-list"></span>
        <%= t(:lists) %>
      <% end %>
      <%= link_to followers_by_login_path(user.login), :class => 'list-group-item' do %>
        <span class="badge"><%= user.followers.count %></span>
        <span class="glyphicon glyphicon-user"></span>
        <%= t(:followers) %>
      <% end %>
      <%= extra %>
    </div>
  </div>
</div>

