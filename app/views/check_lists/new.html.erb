<%- @title = capture do -%>
  <%=t :new_check_list %>
  <% if @check_list.place -%>
    (<%=h @check_list.place.name %>)
  <% end -%>
<%- end -%>
<% content_for(:title) do -%>
  <%= @title %>
<% end -%>
<% content_for(:extracss) do -%>
  <%= stylesheet_link_tag 'lists/form', 'check_lists/form' %>
<% end -%>
<% content_for(:extrajs) do -%>
  <%= javascript_include_tag 'checklist_bundle' %>
<% end -%>
<div id="pageheader" class="column span-24 last">
  <span class="breadcrumbs">
    <% if @place -%>
      <%=raw link_to t(:back_to_lists, :name => @place.name), @place, :class => 'back crumb' %>
    <% end -%>
  </span>
  <h2><%= @title %></h2>
</div>

<div class="column span-24">
  <%= render :partial => 'form' %>
</div>
