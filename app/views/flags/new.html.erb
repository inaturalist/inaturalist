<div id="pageheader" class="column span-24">
  <span class="breadcrumbs">
    <%= link_to t(:back_to_this, :place => "#{@object.to_plain_s}"), @object, :class => 'back crumb' %>
  </span>
  <h2><%=t :new_flag_for %> <%= link_to @object.to_plain_s, @object %></h2>
</div>

<div class="description">
  <p><%=t :flag_description %></p>
</div>

<div class="clear readable buttonrow">
  <% form_for([@object,  @flag]) do |f| %>
    <%= f.label :reason, raw t(:flag_reason, :record=>"#{@model.name.downcase}") %>
    <%= f.text_field :flag, :class => 'text' %>
    <label>&rdquo;</label>
    <%= f.hidden_field :user_id, :value=>current_user.id %>    
    <%= f.hidden_field :flaggable_id, :value=>@object.id %>
    <%= f.hidden_field :flaggable_type, :value=>@model.name %>
    <%= f.submit t(:flag_it!), :class => 'default button' %>
  <% end %>
</div>

<%= render :partial => "flag_list", :locals => { :flags => @flags } %>
