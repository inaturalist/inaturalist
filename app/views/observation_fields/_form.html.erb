<% form_for @observation_field, :builder => DefaultFormBuilder do |f| %>
  <%= f.error_messages %>

  <%= f.text_field :name, :required => true %>
  <%= f.text_field :description %>
  <%= f.select :datatype, ObservationField::TYPES, :required => true %>
  <%= f.text_field :allowed_values, :description => t(:separate_values_with_a_pipe) %>
  <%= f.submit t(:save), :class => "default button", "data-loading-click" => t(:saving) %>
<% end %>
