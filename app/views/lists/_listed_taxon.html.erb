<%- 
  listed_taxon ||= @listed_taxon
  list ||= @list ||= listed_taxon.list
  current_user_life_list_taxon_ids ||= @current_user_life_list_taxon_ids 
  seenit ||= current_user_life_list_taxon_ids && current_user_life_list_taxon_ids.include?(listed_taxon.taxon.id) 
  seenit ||= false
  editable ||= @listed_taxa_editble_by_current_user
  editable = list.listed_taxa_editable_by?(current_user) if editable.nil?
  photo ||= if @photos_by_listed_taxon_id && @photos_by_listed_taxon_id[listed_taxon.id]
    @photos_by_listed_taxon_id[listed_taxon.id]
  else
    listed_taxon.taxon.photos.first
  end
-%>
<%- rendered_taxon_name = capture do -%>
  <%= render(:partial => 'shared/taxon', :formats => [:html], :object => listed_taxon.taxon) -%>
<%- end -%>
<div id="listed_taxon_<%= listed_taxon.id %>" class="listed_taxon clear <%= listed_taxon.taxon.iconic_taxon.name rescue 'Unkown' %> taxon-<%= listed_taxon.taxon.id %>">
  <div class="column image">
    <%- if photo -%>
      <%= modal_image(photo) %>
    <% else -%>
      <%= link_to '', listed_taxon.taxon %>
    <% end -%>
  </div>
  <div class="actions">
    <% if logged_in? && listed_taxon.removable_by?(current_user) -%>
      <%= link_to("&times;".html_safe, 
        listed_taxon_path(listed_taxon, :format => :json), 
        :remote => true,
        :method => :delete,
        :type => 'text',
        :confirm => t(:you_sure_delete_taxon_from_list?, :taxon => default_taxon_name(listed_taxon.taxon)), 
        :title => t(:remove_from_list),
        :class => "description removelink") %>
    <% end -%>
    <div class="seenit">
      <%= link_to(
        t(:add_an_observation), 
        new_observation_path(:taxon_id => listed_taxon.taxon), 
        :title => t(:add_an_observation_of, :taxon=> "#{default_taxon_name(listed_taxon.taxon)}"),
        :class => '') %>
    </div>
  </div>
  <div class="column details">
    <p class="ui">
      <%= link_to rendered_taxon_name, listed_taxon.taxon %>
    </p>
    
    <% if listed_taxon.occurrence_status || listed_taxon.establishment_means -%>
      <div class="occurrence description">
        <label><%= t :status %>: </label>
        <%= [t("occurrence_status_levels.#{listed_taxon.occurrence_status.downcase}", :default => listed_taxon.occurrence_status),
             t("establishment.#{listed_taxon.establishment_means.downcase}",:default => listed_taxon.establishment_means)].compact.join(' / ') %>
      </div>
    <% end -%>
    
    <% unless listed_taxon.description.blank? -%>
      <%- txt = h(strip_tags(listed_taxon.description)) -%>
      <p class="ui clear description">
        <%= truncate txt, :length => 200 %>
        <% if txt.size > 200 -%>
          <%= link_to t(:more), listed_taxon, :class => "readmore" %>
        <% elsif editable -%>
          <%= link_to t(:edit), listed_taxon, :class => "readmore" %>
        <% end -%>
      </p>
    <% end -%>
    
    <div class="description">
      <% if listed_taxon.last_observation %>
        <span class="observation">
         <%=t :last_seen %>
          <a href="<%= observation_url(listed_taxon.last_observation) %>">
            <%= one_line_observation listed_taxon.last_observation, :skip => %w(user taxon) %>
          </a>
          <% if list.is_a?(CheckList) -%>
            <span class="button"><%= link_to "(" + t(:view_all) + ")", observations_url(:place_id => list.place_id, :taxon_id => listed_taxon.taxon_id) %></span>
          <% elsif list.is_a?(ProjectList) %>
            <span class="button"><%= link_to "(" + t(:view_all) + ")", project_observations_url(list.project_id, :taxon_id => listed_taxon.taxon_id) %></span>
          <% elsif list.user %>
            <span class="button"><%= link_to "(" + t(:view_all) + ")", observations_by_login_url(list.user.login, :taxon_id => listed_taxon.taxon_id) %></span>
          <% end -%>
        </span>
        |
      <% end %>

      <nobr class="counts">
        <%= link_to color_pluralize(listed_taxon.comments_count, t(:comment)), listed_taxon %>
      </nobr>
      
      <% if editable -%>
        | <%= link_to t(:edit), listed_taxon %>
      <% end -%>
    </div>
  </div>
</div>
