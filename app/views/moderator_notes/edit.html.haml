- content_for :title do
  = @title = t( :edit_moderator_note )
.container
  .row
    .col-xs-8
      %h2= @title
      = form_for @moderator_note, builder: BootstrapFormBuilder do |f|
        = f.text_area :body, maxlength: ModeratorNote::MAX_LENGTH
        = f.submit t(:update), class: "btn btn-primary"