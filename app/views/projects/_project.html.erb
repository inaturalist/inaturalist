<%-
  project ||= object || @project
  last ||= false
-%>
<div class="stacked column span-8 project<%= ' last' if last %>">
  <div class="column span-2 iconcol">
    <%= link_to image_tag(project.icon.url(:span2), :alt => "#{h(project.title)} icon"), project %>
  </div>
  <div class="last column span-6">
    <h4><%= link_to h(project.title), project %></h4>
    <% unless project.description.blank? %>
      <div class="description">
        <%= h strip_tags(truncate(project.description, :length => 110)) %>
      </div>
    <% end %>
  </div>  
</div>
