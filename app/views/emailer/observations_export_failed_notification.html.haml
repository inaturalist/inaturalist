= render "header"

%p= t "views.emailer.observations_export_notification.your_observations_export_failed_html", url: @exports_url
%table{ cellpadding: 10 }
  %tr
    %th{ valign: "top", align: "left" }= t :query
    %td
      = link_to URI.unescape(@flow_task.query), export_observations_url + "?#{@flow_task.query}"
  %tr
    %th{ valign: "top", align: "left"}= t :columns
    %td
      %ul
        - @flow_task.export_columns.each do |c|
          %li= c

= render "footer"
