- content_for :extrahead do
  = stylesheet_link_tag "jquery-ui"
  = stylesheet_link_tag "autocomplete"
  = stylesheet_link_tag "font-awesome"
  = stylesheet_link_tag "bootstrap"
  = stylesheet_link_tag "observations/uploader"
  = stylesheet_link_tag "computer_vision/index"
  %meta{ name: "viewport", content: "width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" }
  %meta{ name: "config:inaturalist_api_url", content: CONFIG.public_node_api_url || CONFIG.node_api_url }
  :javascript
    var SITE_ICONS = {
      nvidia: "#{ asset_url( "sites/logo-nvdia-horiz.svg" ) }",
      visipedia: "#{ asset_url( "sites/logo-visipedia.svg" ) }"
    }
#app
= google_maps_js libraries: %w(places geometry drawing)
- content_for :delayed_js do
  = javascript_include_tag "i18n/translations"
  = javascript_include_tag "jquery/jquery-1.11.3.min.js"
  = javascript_include_tag "jquery/jquery-ui-1.11.4.min.js"
  = javascript_include_tag "inaturalist"
  = javascript_include_tag "ang/models/taxon"
  = javascript_include_tag "inaturalist/map3"
  = javascript_include_tag "jquery/plugins/inat/generic_autocomplete"
  = javascript_include_tag "jquery/plugins/inat/taxon_autocomplete"
  = javascript_include_tag "webpack/runtime-webpack"
  = javascript_include_tag "webpack/react-main-webpack"
  = javascript_include_tag "webpack/react-dropzone-webpack"
  = javascript_include_tag "webpack/computer-vision-webpack"
  = javascript_include_tag "bootstrap.min"
