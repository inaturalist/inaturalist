<div id="edit_taxon_photos_<%= @taxon.id %>" class="edit_taxon_photos">
  <span class="close corner">&times;</span>
  <h2 style="margin: 0"><%= t(:choose_photos_for_this_taxon) %></h2>
  
  <div class="readable description" style="margin-bottom: 1em">
    <%= t(:choose_cc_licensed_photos_html, :site_name => SITE_NAME) %>
  </div>
  
  <div class="tabs">
    <ul>
      <li><%= link_to "<span>From Flickr</span>".html_safe, "#flickr_taxon_photos" %></li>
      <li><%= link_to "<span>From iNat observations</span>".html_safe, "#inat_obs_taxon_photos" %></li>
      <li><%= link_to "<span>From EOL</span>".html_safe, "#eol_taxon_photos" %></li>
      <li><%= link_to "<span>From Wikimedia Commons</span>".html_safe, "#wikimedia_taxon_photos" %></li>
    </ul>
    
    <div id="wikimedia_taxon_photos">
      <%= form_tag({:action => 'update_photos'}) do %>
        <div class="taxon_photos clear">
          <%= render :partial => "photos/photo_list_form", :locals => { 
            :photos => @taxon.taxon_photos.sort_by{|tp| tp.id}.map{|tp| tp.photo},
            :checked => true } %>
        </div>
        <div class="buttonrow">
          <%= submit_tag 'Save photos', :class => 'default button' %>
          <%= link_to_function 'Cancel', 'return false;', :class => 'button close' %>
        </div>
      <% end %>
    </div>
    
    <div id="eol_taxon_photos">
      <%= form_tag({:action => 'update_photos'}) do %>
        <div class="taxon_photos clear">
          <%= render :partial => "photos/photo_list_form", :locals => { 
            :photos => @taxon.taxon_photos.sort_by{|tp| tp.id}.map{|tp| tp.photo},
            :checked => true } %>
        </div>
        <div class="buttonrow">
          <%= submit_tag 'Save photos', :class => 'default button' %>
          <%= link_to_function 'Cancel', 'return false;', :class => 'button close' %>
        </div>
      <% end %>
    </div>
    
    <div id="flickr_taxon_photos">
      <%= form_tag({:action => 'update_photos'}) do %>
        <div class="taxon_photos clear">
          <%= render :partial => "photos/photo_list_form", :locals => { 
            :photos => @taxon.taxon_photos.sort_by{|tp| tp.id}.map{|tp| tp.photo},
            :checked => true } %>
        </div>
        <div class="buttonrow">
          <%= submit_tag t(:save_photos), :class => 'default button' %>
          <%= link_to_function t(:cancel), 'return false;', :class => 'button close' %>
        </div>
      <% end %>
    </div>
    
    <div id="inat_obs_taxon_photos">
      <%= form_tag({:action => 'update_photos'}) do %>
        <div class="taxon_photos clear">
          <%= render :partial => "photos/photo_list_form", :locals => { 
            :photos => @taxon.taxon_photos.sort_by{|tp| tp.id}.map{|tp| tp.photo},
            :checked => true } %>
        </div>
        <div class="buttonrow">
          <%= submit_tag t(:save_photos), :class => 'default button', "data-loading-click" => "Saving..." %>
          <%= link_to_function t(:cancel), 'return false;', :class => 'button close' %>
        </div>
      <% end %>
    </div>
  </div>

</div>
