      <% else %>
        <ul id="places_list">
          <% for lt in @sorted_check_listed_taxa %>
            <li>
              <%= link_to t(lt.place.display_name, :default => lt.place.display_name), lt.place %>
              <% if logged_in? && lt.editable_by?(current_user) -%>
                <%= link_to(t(:edit), lt, :class => "small description editlink") %>
              <% end -%>
              
