<%- content_for(:extrajs) do %>
  <!--[if lt IE 8]>
  <script src="http://ie7-js.googlecode.com/svn/trunk/lib/IE8.js" type="text/javascript"></script>
  <![endif]-->
  
  <%= javascript_include_tag 'jquery/plugins/jqModal',
                             'modal_image',
                             "jquery/plugins/inat/photo_selectors.js",
                             'jquery/plugins/jquery.autocomplete.min.js',
                             'jquery/plugins/inat/place_autocomplete.js',
                             "jquery/plugins/jquery.qtip.min",
                             'jquery/jquery-ui-1.8.11.min' %>

  <% if @show_range %>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <% end -%>
  
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      $('#tabs').tabs()
      
      //Toggle Gbif button, adapted from http://www.mappingsupport.com/forum_post/toggleGbif_good.html
      function HomeControl(controlDiv) {
        // Set CSS styles for the DIV containing the control
        // Setting padding to 5 px will offset the control
        // from the edge of the map
        controlDiv.style.padding = '5px';
        
        var controlUI = $('<div>Show museum records</div>').addClass('gmapv3control')
        controlDiv.appendChild(controlUI.get(0))
        
        controlUI.toggle(function() {
          controlUI.html('Hide museum records')
          gbifLayer.setMap(window.map);
        }, function() {
          controlUI.html('Show museum records')
          gbifLayer.setMap(null)
        })
      }
      
      function FullScreenControl() {
        var controlDiv = document.createElement('DIV')
        controlDiv.style.padding = '5px';
        var controlUI = $('<div>Full screen</div>').addClass('gmapv3control')
        controlDiv.appendChild(controlUI.get(0))
        
        controlUI.toggle(function() {
          $(this).html('Exit Full screen')
          $('#taxon_range_map').addClass('fullscreen')
          google.maps.event.trigger(window.map, 'resize')
        }, function() {
          $(this).html('Full screen')
          $('#taxon_range_map').removeClass('fullscreen')
          google.maps.event.trigger(window.map, 'resize')
        })
        return controlDiv;
      }
      
      function addKmlLayer(url) {
        var lyr = new google.maps.KmlLayer(url, {suppressInfoWindows: true, preserveViewport: true})
        google.maps.event.addListener(lyr, 'click', function(e) {
          if (!window['kmlInfoWindows']) window['kmlInfoWindows'] = {}
          for (var k in window['kmlInfoWindows']) {
            window['kmlInfoWindows'][k].close()
          }
          var win = window['kmlInfoWindows'][e.featureData.id]
          if (!win) {
            win = window['kmlInfoWindows'][e.featureData.id] = new google.maps.InfoWindow({
              content: e.featureData.description, 
              position: e.latLng,
              pixelOffset: e.pixelOffset
            });
          }
          win.open(window.map);
        });
        return lyr;
      }

      <% if @show_range %>
        window.map = new google.maps.Map(document.getElementById("taxon_range_map"), {
          mapTypeId: google.maps.MapTypeId.TERRAIN
        });

        window.ctaLayer = new google.maps.KmlLayer('<%= root_url.gsub(/\/$/, "") + @taxon_range.range.url %>',
            {suppressInfoWindows: true});
        window.ctaLayer.setMap(map);
    
        var gbifLayer = window.gbifLayer = addKmlLayer('http://data.gbif.org/ws/rest/occurrence/list?scientificname=<%= @taxon_gbif %>&format=kml')
      
        var homeControlDiv = document.createElement('DIV');
        var homeControl = new HomeControl(homeControlDiv);
        homeControlDiv.index = 1;
        window.map.controls[google.maps.ControlPosition.TOP_RIGHT].push(homeControlDiv);
        window.map.controls[google.maps.ControlPosition.TOP_RIGHT].push(new FullScreenControl());

        <% if Rails.env.development? %>
          var iNatLyr = addKmlLayer('http://inaturalist.org/observations.kml?taxon_name=<%= URI.escape(@taxon.name) %>')
        <% else %>
          var iNatLyr = addKmlLayer('<%= observations_url(:format => :kml, :taxon_id => @taxon.id) %>')
        <% end %>
        iNatLyr.setMap(window.map);

        $('#tabs').bind('tabsshow', function(event, ui) {
          google.maps.event.trigger(window.map, 'resize')
          window.map.fitBounds(window.ctaLayer.getDefaultViewport())
        })
      <% end %>
      
      <% if (!@taxon.species_or_lower? && @photos.size < 24) || @photos.blank? %>
        $('#photos_loading_status').show()
        $('#photos').load('<%= taxon_photos_path(@taxon) %>', function() {
          $('#modal_image_box').jqmAddTrigger('#photos a.modal_image_link');
        });
      <% end %>
      
      <% if @taxon.auto_description? %>
        $.ajax({
          url: '<%= describe_taxon_path(@taxon, :description => params[:description]) %>',
          method: 'get',
          beforeSend: function() {
            $('#description_loading_status').show()
          },
          success: function(data, status) {
            $('#wikipedia_description').html(data);
          },
          error: function(request, status, error) {
            $('#nodescription').show();
            $('#wikipedia_description .loading').hide();
          }
        });
      <% end %>
      
      // Set up photo modal dialog
      <% if logged_in? %>
        $('#edit_photos_dialog').jqm({
          closeClass: 'close', 
          ajax: '<%= taxon_path(@taxon) %>/edit_photos',
          method: 'get',
          onShow: function(h) {
            h.w.append($('<div class="loading description">Loading...</div>'));
            h.w.fadeIn(500);
            iNaturalist.modalCenter(h.w)
          },
          onHide: function(h) {
            h.w.fadeOut(500,function(){ h.o.remove(); })
          },
          onLoad: function(h) {
            iNaturalist.modalCenter(h.w)
            $(h.w).find('.taxon_photos').photoSelector({
              defaultQuery: '<%= @taxon.name %>',
              urlParams: {
                authenticity_token: encodeURIComponent(<%= form_authenticity_token.inspect %>),
                limit: 15
              },
              afterQueryPhotos: function() {
                iNaturalist.modalCenter(h.w)
              }
            });
          }
        });
      
        <% if @taxon.species_or_lower? -%>
          $('#add_to_place_dialog').jqm({
            closeClass: 'close',
            method: 'get',
            ajax: '<%= taxon_path(@taxon) %>/add_places',
            onShow: function(h) {
              h.w.append($('<div class="loading description">Loading...</div>'));
              iNaturalist.modalCenter(h.w)
              h.w.fadeIn(500);
            },
            onLoad: function(h) {
              iNaturalist.modalCenter(h.w)
              $('#place_selector').tabs();
            },
            onHide: function(h) {
              h.w.fadeOut(500,function(){ h.o.remove(); })
            }
          });
        <% end %>
      <% end %>
    });
  </script>
<% end -%>

