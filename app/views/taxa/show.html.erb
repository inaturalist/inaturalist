              <div class="buttonrow">
                <%= f.submit "Save Colors", :class => 'button', :style => 'margin: 0.5em auto' %>
                <div class="inter loading status" style="display: none; clear: left">Saving...</div>
              </div>
            <% end %>
          </div>
        </div>
      <% end -%>
    </div>
  <% end -%>
  
