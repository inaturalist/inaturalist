        <%= google_charts_map_for_places(@us_states, {:chs => '150x75'}) %>
      <% elsif !@countries.blank? %>
        <span class="description">Countries:</span>
        <%= google_charts_map_for_places(@countries, {:chs => '150x75'}) %>
      <% end -%>
    
