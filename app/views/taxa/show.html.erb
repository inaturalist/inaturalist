                  <%= link_to "edit", edit_taxon_name_path(taxon_name), :class => 'small description' %>
                <% end -%>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>

    <% if logged_in? -%>
      <%= link_to "Add a name", new_taxon_taxon_name_path(@taxon), :class => 'readmore' %>
    <% end -%>
