      <div id="colorboxen">
        <% for color in @colors %>
          <%= link_to "&nbsp;".html_safe, {:controller => "taxa", :action => "search", :colors => color.id},
            :class => "color", :style => "background-color: #{color.value}", :title => color.value, 
            :rel => "nofollow" %>
        <% end %>
      </div>
      <% if logged_in? -%>
        <div id="edit_colors">
          <%= link_to_toggle t(:edit_colors), "#edit_colors_dialog" %>
