- content_for( :title ) do
  - @title = capture do
    =t :editing
    =t @taxon_change.class.name.underscore
    = surround '(', ')' do
      - if @taxon_change.status_committed?
        = t(:committed_on, date: l(@taxon_change.committed_on))
      - elsif @taxon_change.status_withdrawn?
        = t(:withdrawn)
      - else
        = t(:draft)
  = strip_tags @title
= render partial: "form_head"
.last.column.span-24#pageheader
  %span.breadcrumbs
    = link_to t( :back ), taxon_change_path( @taxon_change ), class: "back crumb"
  %h2= @title
= render partial: "form"
