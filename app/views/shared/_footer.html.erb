<div id="footer" class="clear">
  <div class="meta stacked">
    <span class="meta"><%=t :follow_us %></span>
    <%=raw [
      link_to('Twitter', CONFIG.twitter.try(:url)),
      link_to('Facebook', CONFIG.facebook.try(:url))
    ].join('  <span class="meta">&amp;</span> ') %>
    <span class="meta">|&nbsp; <%= t(:mobile_apps_for) %></span>
    <a href="<%= CONFIG.iphone_app_url %>">iPhone</a>
    <span class="meta">&amp;</span>
    <a href="<%= CONFIG.android_app_url %>">Android</a>
    |
    <%=t :powered_by_inaturalist_open_source_software_html %>
  </div>

  <div class="meta">
    <a href="<%= CONFIG.about_url %>"><%= t(:about_x, :x => SITE_NAME) %></a> &nbsp;
    <a href="<%= CONFIG.help_url %>"><%=t :help %></a> &nbsp;
    <a href="<%= CONFIG.feedback_url %>"><%=t :feedback %></a> &nbsp;
    <a href="<%= CONFIG.terms_url %>"><%=t :terms_service %></a> &nbsp;
    <a href="<%= CONFIG.privacy_url %>"><%=t :privacy%></a> &nbsp;
  </div>
</div>
<%- if defined?(is_mobile_device?) && is_mobile_device? && @mobilized -%>
  <div class="flash notice">
    <%= link_to t(:mobile_view_available), toggle_mobile_path, :id => "mobiletogglelink" %>
  </div>
<% end -%>
