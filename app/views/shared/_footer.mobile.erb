<div id="footer" class="clear">
  <ul class="stacked">
    <li><%= link_to t(:home), root_path %></li>
    <% if logged_in? -%><li><%= link_to "Dashboard", dashboard_path %></li><% end -%>
    <li><%= link_to t(:observations), observations_path %></li>
    <% if logged_in? -%>
      <li><%= link_to t(:your_observations), observations_by_login_path(current_user.login) %></li>
    <% end -%>
    <li><%= link_to "Taxa", taxa_path %></li>
    <li>
      <%= link_to t(:view_non_mobile_site), toggle_mobile_path, :class => "box" %>
    </li>
    <% if logged_in? -%>
      <li><%= link_to t(:sign_out), logout_path, :class => "meta box" %></li>
    <% end -%>
  </ul>
  <div id="footer_text" class="stacked">

    <a href="<%= CONFIG.about_url %>"><%= t(:about_x, :x => SITE_NAME) %></a> &nbsp;
    <a href="<%= CONFIG.help_url %>"><%=t(:help)%></a> &nbsp;
    <a href="<%= CONFIG.terms_url %>"> <%= t(:terms_of_service) %></a> &nbsp;
    <a href="<%= CONFIG.privacy_url %>"><%= t(:privacy_policy) %></a> &nbsp;
    <p class="description">
      <%= t(:follow_us_on) %>
      <%=raw [
        link_to('Twitter', CONFIG.twitter.try(:url)),
        link_to('Facebook', CONFIG.facebook.try(:url))
      ].join('  <span class="meta">&amp;</span> ') %>
    </p>
    <p>
      <a href="<%= CONFIG.iphone_app_url %>"><img src="/images/apple_app_store.png"></a> &nbsp;
      <a href="<%= CONFIG.android_app_url %>"><img src="/images/android_market.png"></a>
    </p>
  </div>
</div>
