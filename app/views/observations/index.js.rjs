if not defined? @update or @update.nil?
  @update = 'observations'
end
@observations.each do |observation|
  page.insert_html :bottom, @update, 
                   :partial => 'mini', 
                   :locals => {:observation => observation}
end

if @observations.empty?
  page.insert_html :bottom, @update, 
                   '<p class="description">'+<%=t :none_yet %>+'&hellip;</p>'
end
