<%- content_for(:title) do -%>
  <%= @title = t(:observations_by_user, :user=> "#{you_or_login(@selected_user)}") %>
<%- end -%>
<%- content_for(:extracss) do -%>
  <%= stylesheet_link_tag "observations" %>
<%- end -%>
<h2>
  <% image_and_content link_to(user_image(@selected_user, :size => "thumb"), @selected_user) do %>
    <%= @title %>
  <% end -%>
</h2>

<div class="compact mini observations">
  <% in_format :html do %>
    <%= render :partial => "observations/cached_component", :collection => @observations %>
  <% end -%>
</div>

<%= will_paginate @observations %>
