#identifiers-table.sortable-table.container{ "infinite-scroll" => "showMoreIdentifiers( )", "infinite-scroll-disabled" => "!viewing('identifiers')", "infinite-scroll-distance" => 1 }
  %table.table.table-striped.plain-table
    %thead
      %tr
        %th.rank
          {{ shared.t( 'rank' )}}
        %th.user
          {{ shared.t( 'user' )}}
        %th
          {{ shared.t( 'identifications' )}}
    %tbody
      %tr{ "ng-repeat" => "u in identifiers | limitTo: numberIdentifiersShown" }
        %td.rank
          {{ shared.numberWithCommas( $index + 1 ) }}
        %td
          %a.user.userimage{ href: "/people/{{ u.login }}", "ng-style" => "shared.backgroundIf( u.icon_url )", title: "{{ u.login }}", target: "_self" }
            %i.icon-person{"ng-hide" => "u.icon_url"}
          %a{ href: "/people/{{ u.login }}", title: "{{ u.login }}", target: "_self" }
            {{ u.login }}
        %td {{ shared.numberWithCommas( u.resultCount ) }}
