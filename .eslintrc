{
  "parser": "@babel/eslint-parser",
  "plugins": [
    "ignore-erb"
  ],
  "parserOptions": {
    "requireConfigFile": false,
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": false
  },
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": [2, "never"],
    "func-names": 0,
    "quotes": [2, "double"],
    "space-in-parens": [2, "always"]
  }
}
